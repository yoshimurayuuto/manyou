<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= form.select :status, [['未完了', '未完了'], ['未着手', '未着手'], ['完了', '完了']], {include_blank: 'タスク管理'}, class: 'Task' %>
<%= form.select :priority, [['低', '低'], ['中', '中'], ['高', '高']], {include_blank: '優先順位'}, class: 'Task' %>
  <div class="task_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="task_name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="task_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="task_expiration_date">
    <%= form.label :expiration_date %>
    <%= form.text_field :expiration_date %>
  </div>
  <%= form.submit %>
<% end %>
