<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>名前</th>
    <th>内容</th>
    <th>作成日</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.content %></td>
    <td><%= task.created_at %></td>
    <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
    <td><%= link_to "ブログを編集する", edit_task_path(task.id) %></td>
    <td><%= link_to 'ブログを削除する', task_path(task.id), method: :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to '新しくブログを投稿する', new_task_path %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
